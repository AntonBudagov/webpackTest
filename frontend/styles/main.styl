@import('~bootstrap/dist/css/bootstrap.min.css')
body
  background-color: #222
  overflow hidden
  #myCarousel
    height 400px
    text-align center
    h1
      color: yellow

canvas.dots
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

// random()
//   return math(math(0, 'random') * 100 + 1, 'floor')

random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

#earth
  position relative
  width 100%
  height 100%
  transform translateY(-10vh)

