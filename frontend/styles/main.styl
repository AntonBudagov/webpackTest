.treeChristmas
  width 40vw
  height 50vw
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  margin auto
  background-color: #882
  z-index 9999
  perspective 1000px
  // &:before
  //   content: '';
  //   position: absolute;
  //   width: 90%;
  //   height: 90%;
  //   top: 5%;
  //   left: 5%;
  //   box-shadow: 0 30px 20px rgba(35,32,39,0.5);
  .tree
    width 90%
    height 90%
    position: absolute;
    width: 90%;
    height: 90%;
    top: 5%;
    left: 5%;
    box-shadow: 0 30px 20px rgba(35,32,39,0.5);
    transition: transform 0.2s ease-out
    transform: scaleX(1) scaleY(1) scaleZ(1) translateX(0px) translateY(0px) translateZ(0px) rotateX(0deg) rotateY(0deg) rotateZ(0deg);




@keyframes snowDown
  for i in 0..10
    {10% * i}
      transform: translateY(i*10vh) rotate(i*36deg)
